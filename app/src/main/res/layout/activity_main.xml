<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="284dp" app:srcCompat="@drawable/runningLogo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="336dp" android:contentDescription="@string/string_logo_of_the_fitapp"/>
    <TextView
            android:text="@string/fitapp"
            android:layout_width="413dp"
            android:layout_height="63dp"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"
            android:textAlignment="viewStart" android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="NUEVO ENTRENO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.905" android:layout_marginTop="650dp"
            android:layout_marginStart="161dp" android:layout_marginEnd="162dp" android:textStyle="bold"
            android:textSize="20sp" app:layout_constraintVertical_chainStyle="spread_inside"
            android:textColor="@color/colorPrimaryDark" android:background="@color/colorPrimary"/>
    <Button
            android:text="ELIMINAR HISTORIAL"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button2" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            android:textSize="20sp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.496"
            android:background="@color/colorPrimary" android:textColor="@color/colorPrimaryDark"/>

</android.support.constraint.ConstraintLayout>